{
  "project": "n1hub.theme",
  "objective": "Ship an uploadable FSE WordPress theme ZIP for N1Hub.com.",
  "scope": {
    "allowed": ["n1hub-theme/**","README.md",".gitignore",".github/**","ai-contract.json","LICENSE",".editorconfig",".gitattributes","CONTRIBUTING.md","SECURITY.md","CODEOWNERS"],
    "forbidden": ["add page builders","heavy sliders","random plugins","remote tracking scripts","large JS/CSS deps"]
  },
  "targets": { "wordpress": ">=6.6", "php": ">=8.3" },
  "versioning": { "scheme": "semver", "rule": "+0.01 per iteration" },
  "performance": { "ttfb_ms": 600, "lcp_s": 2.5, "max_3p_js_kb": 0 },
  "brand": { "palette": { "bg": "#000000", "text": "#f3f5f7", "accent": "#22d3ee" } },
  "release": { "zip_folder": "n1hub-theme", "zip_name_pattern": "n1hub.theme.v{version}.zip" },
  "done_when": [
    "ZIP installs & activates on WP >=6.6 / PHP >=8.3",
    "No PHP notices/warnings on homepage",
    "Pattern 'n1hub/hero' exists",
    "Guardrails respected (no builders/bloat)"
  ]
}


